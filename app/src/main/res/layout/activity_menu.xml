<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:src="@drawable/logo_programs"
            android:contentDescription="Programs"
            android:layout_margin="8dp"
            android:background="#FF0000"/>

        <ImageButton
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:src="@drawable/logo_schedule"
            android:contentDescription="Schedule"
            android:layout_margin="8dp"
            android:background="#FF0000"/>

        <ImageButton
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:src="@drawable/logo_calendar"
            android:contentDescription="Calendar"
            android:layout_margin="8dp"
            android:background="#FF0000"/>

        <ImageButton
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:src="@drawable/logo_transit"
            android:contentDescription="Transit"
            android:layout_margin="8dp"
            android:background="#FF0000"/>

        <ImageButton
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:src="@drawable/logo_contacts"
            android:contentDescription="Contacts"
            android:layout_margin="8dp"
            android:background="#FF0000"/>

        <ImageButton
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:src="@drawable/logo_news"
            android:contentDescription="News"
            android:layout_margin="8dp"
            android:background="#FF0000"/>

        <ImageButton
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#FF0000"
            android:contentDescription="Info"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/logo_info" />
    </GridLayout>
</LinearLayout>
